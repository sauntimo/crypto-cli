    "@types/clear": "^0.1.2",
    "@types/figlet": "^1.5.1",
    "@types/node-fetch": "^2.6.1",
    "chalk": "^5.0.1",
    "clear": "^0.1.0",
    "commander": "^9.2.0",
    "dotenv": "^16.0.0",
    "figlet": "^1.5.0",
    "node-fetch": "^3.2.3",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/node": "^17.0.30",
    "nodemon": "^2.0.15",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
